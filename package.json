{
  "name": "ebee",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "pc:start": "pnpm -C ./packages/pc start",
    "pc:build": "pnpm -C ./packages/pc build",
    "mobile:start": "pnpm -C ./packages/mobile start",
    "mobile:build": "pnpm -C ./packages/mobile build",
    "pages:build": "npm run pc:build & npm run mobile:build",
    "node:start": "pnpm -C ./packages/node-server start",
    "node:dev": "pnpm -C ./packages/node-server dev",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages && npm run lint:style",
    "lint:js": "cross-env TIMING=1 eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages",
    "lint:prettier": "prettier --cache --check \"packages/**/*.{js,jsx,tsx,ts,less,md,json}\" --end-of-line auto",
    "lint:style": "stylelint --cache --fix \"packages/**/*.less\" --syntax less",
    "prettier": "prettier --cache --write packages/**/*.{js,jsx,tsx,ts,less,md,json} --end-of-line auto",
    "postinstall": "node bin/postinstall/index.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && npm run lint"
  },
  "lint-staged": {
    "*.{js,jsx,less,sass,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.17.6",
    "@types/mockjs": "^1.0.10",
    "@types/node": "^20.4.10",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@umijs/fabric": "^4.0.1",
    "@umijs/max": "4.x",
    "click-to-react-component": "1.1.0",
    "cross-env": "^7.0.3",
    "eslint": "7.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "stylelint": "^13.13.1",
    "typescript": "^4.1.2",
    "wps-jsapi": "^1.0.5",
    "yorkie": "^2.0.0"
  }
}
